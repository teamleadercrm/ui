{
  "rootDir": "./",
  "testMatch": [
    "**/src/**/?(*.)(spec|test).(ts)?(x)"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/src($|/.*)(.stories.spec.tsx)$"
  ],
  "modulePaths": ["<rootDir>/node_modules"],
  "coveragePathIgnorePatterns": ["<rootDir>/node_modules/","<rootDir>/es/","<rootDir>/cjs/"],
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json"],
  "moduleNameMapper": {
    "\\.(css|scss)$": "identity-obj-proxy"
  },
  "globals": {
    "__DEBUG__": false,
    "__DEV__": false,
    "environment": ""
  },
  "testEnvironmentOptions": {
    "url": "http://localhost"
  },
  "snapshotFormat": {
    "printBasicPrototype": true
  }
}
